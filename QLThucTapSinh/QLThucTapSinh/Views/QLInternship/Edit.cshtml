    $(function () {
        $('.datepicker').datepicker({
            dateFormat: "dd-mm-yy",
            changeMonth: true,
            changeYear: true,
            showOn: "both",
            buttonText: "<i class='fa fa-calendar'></i>"
        });
    });
</script>