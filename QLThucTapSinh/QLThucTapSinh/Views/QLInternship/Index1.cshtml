
@{
    ViewBag.Title = "Index1";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@using QLThucTapSinh.Models;
@model List<QLThucTapSinh.Models.InternShip>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="https://fonts.googleapis.com/css?family=Pacifico&display=swap" rel="stylesheet">
<link href="~/Content/Quanli/style.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/Plugins/jquery-1.10.2.js")" type="text/javascript"></script>
<script src="~/Scripts/Controller/IntershipController.js"></script>
<div class="text-primary" style="text-align:center"> DANH SÁCH KHÓA HỌC CHƯA CÓ QUẢN LÝ</div>
<h1 class="page-header">
    <a href="/QLInternship/Create" class="btn btn-outline btn-primary">Thêm</a>
    <a href="/QLInternship/Index/0" class="btn btn-outline btn-primary">Danh sách Khóa học</a>

</h1>
<input class="form-control" id="myInput" type="text" placeholder="Search..">
<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="table">
        <thead>
            <tr>
                <th class="th"></th>
                <th class="th">Khóa học</th>
                <th class="th">Ngày bắt đầu</th>
                <th class="th">Thời hạn</th>
                <th class="th">Hoạt động</th>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model)
            {
                <tr>
                    <td></td>
                    <td>@item.CourseName</td>
                    <td>@Html.FormatValue(@item.StartDay, "{0:dd/MM/yyyy}")</td>
                    <td>@item.ExpiryDate tháng  </td>
                    <td>
                        @if (@Session["Role"].ToString() == "4")
                        {
                            <a href="/QLInternship/Accuracy/@item.InternshipID" class="btn btn-outline btn-primary">Xác nhận</a>
                        }
                        else
                        {
                            <a href="/QLInternship/Edit/@item.InternshipID" class="btn btn-outline btn-primary">Sửa</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

